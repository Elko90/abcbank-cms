<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">P.no</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="pno" value="" placeholder="Your personal number" maxlength="11" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">F.Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="fname" value="" placeholder="First Name" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">L.Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="lname" value="" placeholder="Last Name" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">D.O.B</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="dob" value="" placeholder="dd.mm.yyyy" maxlength="8" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">City</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="city" value="" placeholder="Enter your location" required>
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Acc.No</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="accno" value="" placeholder="Your account number" maxlength="11" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Add customer</button>

        </div>

    </div>
 </form>